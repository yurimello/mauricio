<div class="container">
  <div class="row " style="padding-top:40px;">
    <h3 class="text-center" >Mauricio</h3>
    <br /><br />
    <div class="col-md-12">
      <div class="panel panel-info">
        <div class="panel-heading">
            RECENT CHAT HISTORY
          </div>
          <div class="panel-body">
            <ul class="media-list" id="messages">
             <%= render @messages %>
            </ul>
          </div>
          <div class="panel-footer">
            <div class="input-group">
              <input type="text" class="form-control message-input" placeholder="Enter Message" data-behavior="room_speaker"/>
              <span class="input-group-btn">
                <button class="btn btn-info send-button" type="button">SEND</button>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
